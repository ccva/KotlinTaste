<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.va.kotlintaste">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignActivity" />

        <activity
            android:name=".MultiShapeActivity"
            android:windowSoftInputMode="adjustResize" />

        <activity android:name=".RadarActivity" />

        <activity android:name=".CpTestActivity" />

        <provider
            android:name=".contentprovider.PersonProvider"
            android:authorities="com.va.kotlintaste"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".service.BackPushService"
            android:enabled="true"
            android:exported="true"
            android:priority="1000"
            android:process=":remote" />

    </application>

</manifest>